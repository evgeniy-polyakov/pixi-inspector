{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "outDir": "dist",
        "target": "ES2015",
        "rootDir": "src",
        "moduleResolution": "Node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "lib": [
            "ES2015",
            "dom"
        ],
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ]
}